  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/out/cli.js",
      "args": [
        "src",
        "min",
        "index.ts",
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "sourceMaps": true
    }
  ]
}